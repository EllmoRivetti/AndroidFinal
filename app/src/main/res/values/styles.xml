<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackgroundStyle3</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme1" parent="@style/AppTheme">
        <item name="colorAccent">@color/colorTextStyle1</item>
        <item name="colorButtonNormal">@color/colorButton</item>

        <item name="android:textColor">@color/colorTextStyle1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="Theme2" parent="@style/AppTheme">
        <item name="colorAccent">@color/colorTextStyle2</item>
        <item name="colorButtonNormal">@color/colorButton</item>

        <item name="android:textColor">@color/colorTextStyle2</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/nobile</item>
    </style>

    <style name="Theme3" parent="@style/AppTheme">
        <item name="colorAccent">@color/colorTextStyle3</item>
        <item name="colorButtonNormal">@color/colorButton</item>

        <item name="android:textColor">@color/colorTextStyle3</item>

        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/blackcondensed</item>
    </style>


</resources>
